<Window x:Class="Prg_Graphicy.Wins.Msgwin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prg_Graphicy.Wins"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{x:Null}"
        AllowsTransparency="True"
        AllowDrop="True"
        WindowStyle="None"
        Topmost="True"
        FontFamily="pack://application:,,,/Prg_Graphicy;component/UIY/FNT/#IRANYekanFN"
        Height="310" Width="557" MinWidth="420" MinHeight="187" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closing="Window_Closing" PreviewKeyDown="Window_PreviewKeyDown" Closed="Window_Closed" ContentRendered="Window_ContentRendered" Deactivated="Window_Deactivated">

    <Grid x:Name="grid" RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="border" CornerRadius="10,10,10,10" Padding="8" RenderTransformOrigin="0.5,0.5"  BorderBrush="{Binding ElementName=GENERAL_RANG,Path=Background}" BorderThickness="1" Background="White" Grid.ColumnSpan="5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Border x:Name="TitleDrawBar" CornerRadius="10,10,0,0"  Margin="-9,-9,-9,0" VerticalAlignment="Top" UseLayoutRounding="False" Height="36" MouseLeftButtonDown="TitleDrawBar_MouseLeftButtonDown" Background="{Binding Background, ElementName=GENERAL_RANG}">
                <Grid>
                    <Label Content="8.6.9" HorizontalAlignment="Left" VerticalContentAlignment="Center" Width="458" Margin="10,0,0,0" Foreground="#DDFFFFFF"/>
                    <Button x:Name="Btn_Closer" Click="Btn_Closer_Click" IsEnabled="False" Margin="0,0,9,0"  BorderBrush="{x:Null}" Background="Transparent" FontSize="12"  Height="18" VerticalAlignment="Center" FontFamily="Tahoma" Foreground="White" Padding="1,-2,1,1" IsTabStop="False" HorizontalAlignment="Right" Width="24" >
                        <materialDesign:PackIcon Kind="WindowClose" Margin="0,0,0,0" Height="17" Width="21" Foreground="White" />
                    </Button>
                    <Button x:Name="Btn_Max" Click="Btn_Max_Click" Margin="0,0,33,0"  BorderBrush="{x:Null}" Background="Transparent" FontSize="12"  Height="18" VerticalAlignment="Center" FontFamily="Tahoma" Foreground="White" Padding="1,-2,1,1" IsTabStop="False" HorizontalAlignment="Right" Width="24" >
                        <materialDesign:PackIcon Kind="WindowMaximize" Margin="0,0,0,0" Height="17" Width="21" Foreground="White" />
                    </Button>
                    <Button x:Name="Btn_Minimize" Click="Btn_Minimize_Click" Margin="0,0,60,0"  BorderBrush="{x:Null}" Background="Transparent" FontSize="12"  Height="18" VerticalAlignment="Center" FontFamily="Tahoma" Foreground="White" Padding="1,-2,1,1" IsTabStop="False" HorizontalAlignment="Right" Width="24" >
                        <materialDesign:PackIcon Kind="WindowMinimize" Margin="0,4,0,0" Height="17" Width="21" Foreground="White" />
                    </Button>

                </Grid>
            </Border>
        </Border>
        <!--YesAndNoForDoingStart-->

        <Button Padding="1" x:Name="Btn_yes" Visibility="Visible" Content="بله" Margin="5,0,5,13"    Height="42" Click="Btn_yes_Click" BorderBrush="{x:Null}" Foreground="White" VerticalAlignment="Bottom" Cursor="Hand" FontSize="14" TabIndex="1" Grid.Column="3" />

        <Button Padding="1" x:Name="Btn_no" Visibility="Visible" Content="خیر" Margin="2,0,5,13"    Height="42" BorderBrush="{x:Null}" Click="Btn_no_Click" Foreground="White" VerticalAlignment="Bottom" Cursor="Hand" FontSize="14" TabIndex="2" Grid.Column="1" />

        <!--YesAndNoForDoing_End MsgTextBig-->
        <TextBlock x:Name="MsgTextBig" Text="Long Resposive" Padding="1" Width="417"  TextWrapping="Wrap" TextAlignment="Right" FontFamily="/WpfApp5;component/FNT/#IRANSans Medium" Margin="32,42,31,60" Grid.ColumnSpan="5" />

        <TextBox Name="MsgTextNote" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FlowDirection="RightToLeft"  TextWrapping="Wrap" Text="اینجا پیغام اول به صورت پیغام عادی می باشد"  Foreground="Black" Margin="9,42,12,70" Grid.ColumnSpan="5"/>
        <!--JustOKCancelStart-->
        <Button Padding="1" x:Name="Btn_SeeOK" Visibility="Visible" Content="تایید" Margin="100,0,103,13"    Height="42"  BorderBrush="{x:Null}" Click="Btn_SeeOK_Click" Foreground="White" VerticalAlignment="Bottom" Cursor="Hand" FontSize="14" TabIndex="0" Grid.ColumnSpan="3" Grid.Column="1" />

        <!--JustOKCancelEnd-->
        <Button x:Name="GENERAL_RANG" Visibility="Collapsed" Margin="12,124,117,69"  Width="1" Grid.Column="3"/>
        <ListBox x:Name="MSG_LISTBOX" d:ItemsSource="{d:SampleData ItemCount=3}" d:Visibility="Visible" Visibility="Hidden"  FlowDirection="RightToLeft" Margin="0,36,0,70" Grid.ColumnSpan="5"/>

    </Grid>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="12"/>
    </WindowChrome.WindowChrome>
</Window>
