<Window x:Class="Prg_Graphicy.Wins.MsgListwin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prg_Graphicy.Wins"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{x:Null}"
        AllowsTransparency="True"
        AllowDrop="True"
        WindowStyle="None"
        Topmost="True"
        FontFamily="pack://application:,,,/Prg_Graphicy;component/UIY/FNT/#IRANYekanFN"
        Height="400" Width="700" MinWidth="420" MinHeight="187" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closing="Window_Closing" PreviewKeyDown="Window_PreviewKeyDown">

    <Grid x:Name="grid" RenderTransformOrigin="0.5,0.5">
        <Border x:Name="border" CornerRadius="10,10,10,10" Padding="8" RenderTransformOrigin="0.5,0.5"  BorderBrush="{Binding ElementName=GENERAL_RANG,Path=Background}" BorderThickness="1" Background="White">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Border x:Name="TitleDrawBar" CornerRadius="10,10,0,0"  Margin="-9,-9,-9,0" VerticalAlignment="Top" UseLayoutRounding="False" Height="36" MouseLeftButtonDown="TitleDrawBar_MouseLeftButtonDown" Background="{Binding Background, ElementName=GENERAL_RANG}">
                <Grid>
                    <Button x:Name="Btn_Max" Click="Btn_Max_Click" Margin="0,0,13,0"  BorderBrush="{x:Null}" Background="Transparent" FontSize="12"  Height="18" VerticalAlignment="Center" FontFamily="Tahoma" Foreground="White" Padding="1,-2,1,1" IsTabStop="False" HorizontalAlignment="Right" Width="24" >
                        <Button.Content>
                            <materialDesign:PackIcon Kind="WindowMaximize" Margin="0,0,0,0" Height="17" Width="21" Foreground="White" />
                        </Button.Content>
                    </Button>
                    <Button x:Name="Btn_Minimize" Click="Btn_Minimize_Click" Margin="0,0,42,0"  BorderBrush="{x:Null}" Background="Transparent" FontSize="12"  Height="18" VerticalAlignment="Center" FontFamily="Tahoma" Foreground="White" Padding="1,-2,1,1" IsTabStop="False" HorizontalAlignment="Right" Width="24" >
                        <Button.Content>
                            <materialDesign:PackIcon Kind="WindowMinimize" Margin="0,4,0,0" Height="17" Width="21" Foreground="White" />
                        </Button.Content>
                    </Button>

                </Grid>
            </Border>
        </Border>
        <!--YesAndNoForDoingStart-->

        <Button Padding="1" x:Name="Btn_yes" Visibility="Visible" Content="بله" Margin="279,0,81,13"    Height="42" Click="Btn_yes_Click" BorderBrush="{x:Null}" Foreground="White" VerticalAlignment="Bottom" Cursor="Hand" FontSize="14" TabIndex="1" Width="150" />

        <Button Padding="1" x:Name="Btn_no" Visibility="Visible" Content="خیر" Margin="84,0,276,13"    Height="42" BorderBrush="{x:Null}" Click="Btn_no_Click" Foreground="White" VerticalAlignment="Bottom" Cursor="Hand" FontSize="14" TabIndex="2" Width="150" />

        <!--YesAndNoForDoing_End MsgTextBig-->

        <!--JustOKCancelStart-->
        <Button Padding="1" x:Name="Btn_SeeOK" Visibility="Visible" Content="تایید" Margin="182,0,178,13"    Height="42"  BorderBrush="{x:Null}" Click="Btn_SeeOK_Click" Foreground="White" VerticalAlignment="Bottom" Cursor="Hand" FontSize="14" TabIndex="0" Width="150" />

        <!--JustOKCancelEnd-->
        <Button x:Name="GENERAL_RANG" Visibility="Collapsed" Margin="95,56,0,0"  Width="1"/>
        <DataGrid x:Name="MSG_DGLISTBOX" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" FlowDirection="RightToLeft" Margin="30,50,20,69">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ردیف" Binding="{Binding ROW_U}" Width="auto" />
                <DataGridTextColumn Header="کد" Binding="{Binding CODE_U}" Width="auto"/>
                <DataGridTextColumn Header="پیام" Binding="{Binding MessageText_U}" Width="auto" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="12"/>
    </WindowChrome.WindowChrome>
</Window>
