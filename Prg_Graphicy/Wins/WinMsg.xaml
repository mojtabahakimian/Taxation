<Window x:Class="Prg_Graphicy.Wins.WinMsg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prg_Graphicy.Wins"
        mc:Ignorable="d"
        Visibility="Visible"
        Topmost="True"
        FontFamily="pack://application:,,,/Prg_Graphicy;component/UIY/FNT/#IRANYekanFN"
        Height="240" Width="480"  Margin="0"  MinWidth="420" MinHeight="187"  WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"   Closing="Window_Closing" PreviewKeyDown="Window_PreviewKeyDown" StateChanged="Window_StateChanged">

    <Grid x:Name="grid" RenderTransformOrigin="0.5,0.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <!--YesAndNoForDoingStart-->

        <Button Padding="1" x:Name="Btn_yes" Visibility="Visible" Content="بله" Margin="279,5,81,0"    Height="42" Click="Btn_yes_Click" BorderBrush="{x:Null}" Foreground="White" VerticalAlignment="Top" Cursor="Hand" FontSize="14" TabIndex="1" Background="#FF07A9E0" Grid.Row="1" />

        <Button Padding="1" x:Name="Btn_no" Visibility="Visible" Content="خیر" Margin="84,5,276,0"    Height="42" BorderBrush="{x:Null}" Click="Btn_no_Click" Foreground="White" VerticalAlignment="Top" Cursor="Hand" FontSize="14" TabIndex="2" Background="#FF07A9E0" Grid.Row="1" />

        <!--YesAndNoForDoing_End MsgTextBig-->
        <TextBlock x:Name="MsgTextBig" Text="Long Resposive" Padding="1"  TextWrapping="Wrap" TextAlignment="Right" FontFamily="/WpfApp5;component/FNT/#IRANSans Medium" Margin="32,42,31,5" />

        <TextBox Name="MsgTextNote" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FlowDirection="RightToLeft"  TextWrapping="Wrap" Text="اینجا پیغام اول به صورت پیغام عادی می باشد"  Foreground="Black" Margin="10,10,11,10" BorderBrush="{x:Null}"/>
        <!--JustOKCancelStart-->
        <Button Padding="1" x:Name="Btn_SeeOK" Visibility="Visible" Content="تایید" Margin="182,5,178,0"    Height="42"  BorderBrush="{x:Null}" Click="Btn_SeeOK_Click" Foreground="White" VerticalAlignment="Top" Cursor="Hand" FontSize="14" TabIndex="0" Background="#FF07A9E0" Grid.Row="1" />

        <!--JustOKCancelEnd-->
        <Button x:Name="GENERAL_RANG" Visibility="Collapsed" Margin="287,56,192,0" Grid.RowSpan="2"/>

    </Grid>
</Window>
