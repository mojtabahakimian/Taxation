        <ProgressBar x:Name="progressBar1" HorizontalAlignment="Left" Height="40" Margin="10,79,0,0" VerticalAlignment="Top" Width="765"/>
        <Button x:Name="Button1" Content="Go" HorizontalAlignment="Left" Margin="525,15,0,0" VerticalAlignment="Top" Height="54" Width="230" Click="Button1_Click"/>

    </Grid>
</Window>
